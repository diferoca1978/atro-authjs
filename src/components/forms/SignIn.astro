---
import { Icon } from "astro-icon/components";
---

<section class="h-screen flex justify-center items-center bg-gray-100">
  <div class="w-full max-w-xs bg-white rounded-lg shadow-lg p-5 space-y-4">
    <!-- Title / Sign in with google -->
    <div class="flex flex-col space-y-4">
      <h1 class="text-3xl font-bold">Login</h1>
      <span class="text-sm text-gray-500"
        >Don't have an account?
        <a href="/register" class="text-sky-500 hover:underline">Sign up here</a
        >
      </span>
      <button
        type="button"
        class="w-full flex justify-center items-center space-x-2 bg-gray-50 border border-gray-200 py-2 px-1 rounded-lg shadow-md hover:bg-gray-100 hover:border hover:border-gray-300"
      >
        <Icon name="google" />
        <span>Sign in with Google</span>
      </button>
    </div>
    <!-- OR divider -->
    <div class="flex justify-center items-center space-x-4">
      <hr class="flex-1 border-t border-gray-300" />
      <span class="text-gray-500 text-sm font-medium uppercase">or</span>
      <hr class="flex-1 border-t border-gray-300" />
    </div>
    <!-- Form  -->
    <form class="flex flex-col space-y-4">
      <div class="flex flex-col space-y-1">
        <label for="email">Email</label>
        <input
          type="email"
          placeholder="some@email.com"
          class="w-full inline-flex justify-center placeholder:text-gray-300 border border-gray-200 rounded-md py-2 px-3 focus:outline-none focus:border focus:border-sky-500"
        />
      </div>
      <div class="flex flex-col space-y-1">
        <label for="password">Password</label>
        <input
          type="password"
          placeholder="xxxxxxxx"
          class="w-full inline-flex justify-center placeholder:text-gray-300 border border-gray-200 rounded-md py-2 px-3 focus:outline-none focus:border focus:border-sky-500"
        />
      </div>
      <div>
        <!-- TODO: continue with the checkbox -->
      </div>
    </form>
  </div>
</section>
